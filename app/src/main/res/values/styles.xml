<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/holo_purple</item>
        <item name="colorButtonNormal">@android:color/holo_orange_light</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/holo_purple</item>

    </style>
    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_purple</item>
    </style>


    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/holo_purple</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/holo_purple</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_drawable</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_purple</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/holo_blue_light</item>
        <item name="colorControlActivated">@android:color/holo_red_dark</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/holo_blue_light</item>
        <item name="colorControlActivated">@android:color/holo_green_light</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@android:color/holo_blue_light</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@android:color/holo_green_light</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@android:color/holo_red_dark</item>
    </style>

    <style name="SnackbarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
